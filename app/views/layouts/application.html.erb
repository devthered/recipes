<!DOCTYPE html>
<html>
  <head>
    <title>Recipe Cards</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body data-no-turbolink="true">
    <header>
      <div class="header-container">
        <div class="header-row">
          <h1>Recipe Cards</h1>
          <%= link_to recipes_path, class: 'nav-button' do %>
            <%= image_tag asset_path('back.png'), alt: 'Browse Recipes', title: 'Browse recipes' %>
          <% end %>
        </div>
      </div>
    </header>
    
    <div class="header-spacer"></div>

    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="card alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
    </div>

    <%= yield %>

    <footer>
      <div class="header-container">
        <div class="header-row">
          <h3><a href="https://github.com/devthered">A Website by Devin Reed</a></h3>
          <div class="clear"></div>
        </div>
      </div>
    </footer>

  </body>

  <%= javascript_include_tag 'pretty-dropdowns.js' %>
  <%= javascript_include_tag 'pretty-textareas.js' %>

</html>
