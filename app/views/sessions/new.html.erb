<div class="container">
  <%= form_with(scope: :session, url: login_path, method: :post, remote: true) do |form| %>
    <div class="card">
      <div class="card-header">
        <p class="card-title">Log In</p>
      </div>
      <div class="card-body">
        <%= form.label 'Email:' %>
        <%= form.email_field :email, placeholder: 'name@example.com' %>
        <%= form.label 'Password:' %>
        <%= form.password_field :password, placeholder: 'password' %>
        <%= form.label :remember_me do %>
          <%= form.check_box :remember_me %>
          <span>Stay logged in on this computer</span>
        <% end %>
        <%= link_to "Forgot Password?", new_password_reset_path, class: 'forgot-password-link' %>
        <div class="actions">
          <%= form.submit 'Log In' %>
        </div>
      </div>
    </div>
  <% end %>
</div>