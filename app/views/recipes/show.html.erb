<% if notice %>
  <div class="container">
    <div class="card alert alert-notice">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
<% end %>

<div class="container">
  <%= render partial: "recipe", locals: { recipe: @recipe } %>
</div>

<div class="clear">
  <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
  <%= link_to 'Back', recipes_path %> |
  <%= link_to 'Destroy', @recipe, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
